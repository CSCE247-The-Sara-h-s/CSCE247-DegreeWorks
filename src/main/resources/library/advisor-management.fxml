<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="degreesmart.view.AdminAdvisorManagementController">
    <children>
        <fx:include fx:id="headerPane" source="header-pane.fxml"/>
        <GridPane maxHeight="Infinity" VBox.vgrow="ALWAYS" fx:id="advisorManagement">
            <columnConstraints>
                <ColumnConstraints percentWidth="18"/>
                <ColumnConstraints percentWidth="18"/>
                <ColumnConstraints percentWidth="32"/>
                <ColumnConstraints percentWidth="14"/>
                <ColumnConstraints percentWidth="18"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="5"/>
                <RowConstraints percentHeight="5"/>
                <RowConstraints percentHeight="5"/>
                <RowConstraints percentHeight="85"/>
            </rowConstraints>
            <HBox alignment="CENTER_RIGHT" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <ComboBox fx:id="comboBox"/>
            </HBox>
            <VBox styleClass="searchBox" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1">
                <TextField fx:id="searchField" promptText="Search For Advisor"/>
            </VBox>
            <VBox alignment="CENTER_LEFT" GridPane.columnIndex="4" GridPane.rowIndex="1">
                <Button fx:id="search" text="Search" styleClass="searchButton"/>
            </VBox>
            <VBox GridPane.columnIndex="0" GridPane.columnSpan="5" GridPane.rowIndex="2">
                <HBox>
                    <Label text="Results for advisor-name" alignment="BOTTOM_LEFT" style="-fx-font-size: 20px;"/>
                </HBox>
                <HBox>
                    <Separator HBox.hgrow="ALWAYS" styleClass="seperator"/>
                </HBox>
            </VBox>
            <VBox GridPane.columnIndex="0" GridPane.columnSpan="5" GridPane.rowIndex="3">
                <HBox>
                    <Label text="Name" prefWidth="400"/>
                    <Label text="USC ID" prefWidth="400"/>
                    <Label text="Approval Status" prefWidth="400"/>
                </HBox>
            </VBox>
        </GridPane>
        <fx:include fx:id="footerPane" source="footer-pane.fxml"/>
    </children>
    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
    </padding>
    <stylesheets>
      <URL value="@../styles/admin-home.css"/>
   </stylesheets>
</VBox>